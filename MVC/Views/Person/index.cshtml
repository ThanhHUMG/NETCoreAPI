@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<MVC.Models.Employee>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="Upload" class="btn btn-primary">Upload Excel</a>
    <a asp-action="Download" class="btn btn-success">Download Excel</a>
    <a asp-action="Create" class="btn btn-info">Thêm mới</a>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(model => model[0].FullName)</th>
            <th>@Html.DisplayNameFor(model => model[0].NamSinh)</th>
            <th>@Html.DisplayNameFor(model => model[0].DiaChi)</th>
            <th>@Html.DisplayNameFor(model => model[0].ChuyenNganh)</th>
            <th>@Html.DisplayNameFor(model => model[0].Truong)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(((Model.PageNumber - 1) * Model.PageSize) + i + 1)</td>
            <td>@Html.DisplayFor(modelItem => Model[i].FullName)</td>
            <td>@Html.DisplayFor(modelItem => Model[i].NamSinh)</td>
            <td>@Html.DisplayFor(modelItem => Model[i].DiaChi)</td>
            <td>@Html.DisplayFor(modelItem => Model[i].ChuyenNganh)</td>
            <td>@Html.DisplayFor(modelItem => Model[i].Truong)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model[i].Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
        new X.PagedList.Mvc.Core.PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" }
        })
</div>
